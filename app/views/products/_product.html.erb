<div id="<%= dom_id product %>" class="grid grid-cols-1 md:gap-6 lg:gap-8 mt-4 md:mt-6 lg:mt-8">
  <div class="bg-gray-50 dark:bg-gray-800 p-8">
    <div>
      <h2 class="flex justify-center text-xl leading-tight text-gray-600 dark:text-white"><%= product.name %></h2>
      <p class="text-xl font-semibold text-gray-800 dark:text-white mt-2"></p>
    </div>
    <div class="flex justify-center items-center mt-28 md:mt-3">
      <img src="https://i.ibb.co/8403ZFZ/pexels-hormel-2762247-removebg-preview-2-1.png" alt="A large sectional sofa" role="img" />
    </div>
    <div class="flex justify-end items-center mt-16 md:mt-32">
      <a href="<%= root_path %>" class="bg-blue-400 font-bold text-white px-4 py-3 transition duration-300 ease-in-out hover:bg-blue-600 mr-6">
        Back to products list
      </a>
    </div>
  </div>
</div>